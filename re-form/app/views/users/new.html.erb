<% 
=begin%>

<form action='/users' method='post' accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="username">Username: </label> <br><br>
    <input type="text" name="user[username]"> <br><br>
    <label for="email">Email: </label> <br><br>
    <input type="email" name="user[email]"> <br><br>
    <label for="password">Password: </label> <br><br>
    <input type="password" name="user[password]"> <br> <br>
    <input type="submit" value="Submit">
</form>


<%= form_tag users_path do %>
  <%= label_tag 'username', 'Username: ' %>
  <%= content_tag(:br) %>
  <%= text_field_tag :'user[username]' %>
  <%= content_tag(:br) %>
  <%= label_tag 'email', 'Email: ' %>
  <%= content_tag(:br) %>
  <%= email_field_tag :'user[email]' %>
  <%= content_tag(:br) %>
  <%= label_tag 'password', 'Password: ' %>
  <%= content_tag(:br) %>
  <%= password_field_tag :'user[password]' %>
  <%= content_tag(:br) %>
  <%= submit_tag "Submit User" %>
<% end %>
<%
=end %>

<h1>New User</h1>
<%= form_for(@user) do |f| %>
    <%= f.label :name, "Username" %>
    <%= f.text_field :name, value: "username" %>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "something@mail.com" %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "create" %>
<% end %>